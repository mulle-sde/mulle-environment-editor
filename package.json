{
  "name": "mulle-environment-editor",
  "version": "0.0.2",
  "description": "üèïÔ∏è GUI Editor for the mulle-sde environment",
  "main": "main.js",
  "bin": {
    "mulle-environment-editor": "./cli.js"
  },
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --no-sandbox --inspect",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder --linux --mac --win",
    "dist": "electron-builder --publish=never",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "npx eslint *.js --fix"
  },
  "keywords": [
    "mulle-sde",
    "mulle-env",
    "environment",
    "editor",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.3.3"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-align-assignments": "^1.1.2"
  },
  "build": {
    "appId": "com.mulle-kybernetik.environment-editor",
    "productName": "Mulle Environment Editor",
    "publish": [
      {
        "provider": "github",
        "releaseType": "release",
        "vPrefixedTagName": false
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "cli.js",
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "icon.svg",
      "icon.png",
      "icon-512.png"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "icon-512.png",
      "description": "üèïÔ∏è GUI Editor for the mulle-sde environment",
      "executableName": "mulle-environment-editor"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "icon-512.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon-512.png"
    }
  }
}
